<div class="card m-1">
  <%= image_tag(@car.image, class: "card-img-top") %>
  <div class="card-body">
    <h5 class="card-title"><%= "#{@car.make} #{@car.model}" %></h5>
    <p class="card-text">
      Status:
      <span class="badge text-bg-secondary"><%= @car.status %></span></p>
    <p class="card-text">
      Body type:<%= @car.body_type %></p>
    <p class="card-text">
      Mileage:<%= @car.mileage %></p>
    <p class="card-text">
      Color:<%= @car.color %></p>
    <p class="card-text">
      Price:<%= @car.price %></p>
    <p class="card-text">
      Fuel type:<%= @car.fuel_type %></p>
    <p class="card-text">
      Year:<%= @car.year %></p>
    <p class="card-text">
      Engine volume:<%= @car.engine_volume %></p>
    <p class="card-text">
      User:<%= @car.user_id %></p>
  </div>
</div>
